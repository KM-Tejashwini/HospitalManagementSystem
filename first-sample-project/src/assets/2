    <script>
        function SetCookie(c_name, value, dias) {
            if (dias) {
                var date = new Date();
                date.setTime(date.getTime() + (dias * 24 * 60 * 60 * 1000));
                var expires = "; expires=" + date.toGMTString();
            } else
                var expires = "";
            document.cookie = c_name + "=" + value + expires + "; path=/";
        }

        $('.link-home-container').mouseover(function () {
            var current_img = $(this).find('.bg_marketplace_image_burguer');
            current_img.attr('src', current_img.data("hover"));
        }).mouseout(function () {
            var current_img = $(this).find('.bg_marketplace_image_burguer');
            current_img.attr('src', current_img.data("src"));
        });
    </script>
