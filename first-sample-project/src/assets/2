            function addItemToCart(product, value) {
                //AÃ±adimos al carrito el producto actual y limpiamos
                BT.addCartItems("CARRITO_MARKETPLACE", [ { "id": product, "value": value, "count": 1} ], true);  

                // Ponemos la cookie de product a vacio.
                $.ajax({
                    type: "POST",
                    data: [],
                    url: "/resetMarketCartVars",
                    success: function(msg){

                    },           
                    error: function(){

                    }
                }); 
            }

            //Controlamos si tenemos que hacer algun clear.
            var clear = '';
            if(clear != "" && clear) {
                BT.clearCart("CARRITO_MARKETPLACE", true);
                // Ponemos la variable a false, para que no este todo el rato haciendo clears.
                $.ajax({
                    type: "POST",
                    data: [],
                    url: "/resetMarketClear",
                    success: function(msg){

                    },           
                    error: function(){

                    }
                }); 
            }

            //Aqui controlamos el carrito abandonado
            var tracking = getCookie("abandonedMarketplaceTracking");
            var product = '';
            var value = '';
            // console.log("TRACKING");
            // console.log(product);
            // console.log(value);
            if(!tracking && product != "") {
                //Lanzamos el addCartItems
                addItemToCart(product, value);
            }

            var checkout = '';
            if(checkout != "" && checkout) {
                // AÃ±adimos el producto actual al cart
                addItemToCart(product, value);

                //Hacemos el checkout con el producto actual
                BT.checkoutCart("CARRITO_MARKETPLACE", true);
                $.ajax({
                    type: "POST",
                    data: [],
                    url: "/resetMarketCheckout",
                    success: function(msg){

                    },           
                    error: function(){

                    }
                }); 
            }
        }

