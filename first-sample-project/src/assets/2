<!-- JS -->
<script>
    
    // Init
    error = "<span class='text-danger'>Wrong mobile number. Please, enter the mobile number again.</span>"
    texto_loading = "Sending data. Please, wait..."
    aviso_privacidad = "<p class='text-danger ico_labelled_text'>You must accept the privacy policy</p>"
    enviado = false; // Flag
    
    function comprobar_telf(telefono) {
        var pais = 'en';
        switch(pais)
        {
            case 'mx':
                min_length = 9;
                max_length = 11;
                if(telefono.length > min_length && telefono.length < max_length)
                {
                    valido = true;
                }
            break;
            case 'it':
                min_length = 7;
                max_length = 10;
                if(telefono.length > min_length && telefono.length < max_length)
                {
                    valido = true;
                }
            break;
            default:
                var regexp = /^\d{9}$/; 
                var valido = regexp.test(telefono);
            break;
        }

        return valido;
    }
    
    // Listener
    $("#enviar_telefono_ajax").click( function(event){
        
        event.preventDefault();
        
        if(!enviado){
        
            nombre = $('#nombre').val();
            telefono = $('#telefono').val();
            id_doctor = $('#id_doctor').val();
            id_especialidad = $('#id_especialidad').val();
            id_ciudad = $('#id_ciudad').val();
            id_provincia = $('#id_provincia').val();
            
            if($('#condiciones_check').prop('checked') == false){
                $('#aviso_condiciones').css('color','#ff0000');
                $('#aviso_condiciones').html("<br>"+aviso_privacidad);
                $('#aviso_condiciones').focus();
            } else {
                $('#aviso_condiciones').html('');
            }

            if(comprobar_telf(telefono)){
                $('#resultado').html('');
            } else {
                $('#telefono').attr('enabled','enabled');
                $('#resultado').css('color','#ff0000');
                $('#resultado').html(error);
                $('#telefono').focus();
            }
            
            if(comprobar_telf(telefono) && $('#condiciones_check').prop('checked')){
                enviado = true;
                $('#nombre').attr('disabled','disabled');
                $('#telefono').attr('disabled','disabled');
                $('#condiciones_check').attr('disabled','disabled');
                $('#resultado').css('color','#777777');
                $('#resultado').html("<img style='padding-right: 5px;vertical-align: middle;' width='20px' title='TelÃ©fono registrado' alt='TelÃ©fono registrado' src='https://topdoctors.co.uk/img/ajax-loader.gif'/>" + texto_loading);
                $.ajax({
                    type: 'POST',
                    url: '/staticspages/popup_callback_registrar/',
                    data: {
                        'name': nombre,
                        'telephone_number': telefono, 
                        'doctor_id': id_doctor,
                        'specialization_id': id_especialidad,
                        'city_id': id_ciudad,
                        'province_id': id_provincia
                    },
                    success: function(resultado){
                        $('#resultado').css('color','#006B90');
                        $('#resultado').html(resultado);
                    }
                });
            }
        }
    });
</script>            </div>
            <div class="modal-footer side_margin text-left">
                                <p class="text-info ico_labelled_text bottom_margin">If you can't get in touch, <a href="/doctor/#book_online_container" onclick="dataLayer.push({'eventcategory': 'Interaccion','eventaction': 'PedirCita', 'eventlabel':'Popup','event': 'pedircita','url_page': '/popup_cita_desde'});">book online</a></p>
            </div>
            <p class="text-muted bg_dark text-center no_margins text_light">Top Doctors</p>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function (){
        $(".dropdown-toggle").dropdown();
        $(".doctor_youtube").each(function () {
            // Based on the YouTube ID, we can easily find the thumbnail image
            $(this).css('background-image', 'url(https://i.ytimg.com/vi/' + this.id + '/sddefault.jpg');
            // Overlay the Play icon to make it look like a video player
            $(this).append($('<div/>', {'class': 'play'}));

            $(document).delegate('#' + this.id, 'click', function () {
                // Create an iFrame with autoplay set to true
                var iframe_url = "https://www.youtube.com/embed/" + this.id + "?rel=0&autoplay=1&autohide=1";
                if ($(this).data('params'))
                    iframe_url += '&' + $(this).data('params');
                var iframe = $('<iframe/>', {'frameborder': '0', 'src': iframe_url, 'width': $(this).width(), 'height': $(this).height()})
                $(this).replaceWith(iframe);
            });
        });

        //init_popover('#articles_search_popover', 'focus', 'bottom_left');

        $('#social').share({
            networks: ['facebook', 'googleplus', 'twitter', 'linkedin', 'instagram'],
            urlToShare: 'https://topdoctors.co.uk/medical-articles/when-should-i-see-a-neurologist',
            theme: 'square'
        });

        $(".cover").on('click', function () {
            $("#cover_layer").show();
        });

                if ($(window).innerWidth() > "991") {
            $('#fixed_agenda').sticky({
                topSpacing: 15,
                zIndex: 3,
                stopper: "footer",
            });
        }
                
        
        $("#goback").on('click', function(){
           if(history.length > 2){
               window.history.back();
           }else{
               var url = "/neurology/";
               window.location = url;
               
           }
       });
       
        // Convertir enlaces de artÃ­culo en target=_blank para abrirlos en una nueva pestaÃ±a
        $('article.view a').each(function (index, value) { 
            var attr = $(this).attr('target');

            if (typeof attr !== 'undefined' || attr !== false) {
                $(this).attr('target','_blank');
            }
        });
        

      
     });

    /// STATS & LOG - Utilizamos api externa para detectar IP
    function getIP(json) {
        var article_id = 3434;
        var ip = json.ip;
        var user_agent = navigator.userAgent;
                
        // Llamar a update_logs_stats() de articles controller via AJAX
        $.post("/articles/update_logs_stats", {article_id: article_id, ip: ip, user_agent: user_agent}, function(data){
            //...
        });
            
    }
</script>

<script defer type="application/javascript" src="https://api.ipify.org?format=jsonp&callback=getIP"></script>

