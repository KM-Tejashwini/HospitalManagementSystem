<script>
    function b64_to_utf8(str) {
        return unescape(decodeURIComponent(window.atob(str)));
    }

    $(document).ready(function () {
        $(".encoded_data").click(function (event) {
            window.location.href = b64_to_utf8($(this).attr("data-content"));
        });
    });
</script>
